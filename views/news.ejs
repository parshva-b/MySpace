<%- include ('partials/sidenav') %>

<style>
    .main {
        margin-left: 20%;
        /* Same as the width of the sidenav */
        font-size: 15px;
        /* Increased text to enable scrolling */
        padding: 0px 10px;
    }

    .card {
        margin-left: 20%;
    }

    .table-news {
        border: black;
        border-width: thick;

    }

    .table-data {
        font-family: 'Segoe UI';
    }
</style>

<div class="main">
    <table class="table-news">
        <thead>
            <tr>
                <th>Title</th>
                <th>See full article:</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach( function(a) { %>
            <tr>
                <td class="table-data">
                    <hr style="border-color : transparent"><%= a.title %> </td>
                <td class="table-data">
                    <hr style="border-color : transparent"><a href="<%= a.link %>"><%= a.link %></a> </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<div class="push"></div>

<%- include ('partials/footer') %>